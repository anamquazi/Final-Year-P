@model Perfomans.Models.User

@{
    ViewData["Title"] = "Edit user -";
}

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <table class="table_main">
        <caption>Edit user</caption>
        <tr>
            <th>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </th>
            <th>
                <div class="form-group">
                    <label asp-for="SourName" class="control-label"></label>
                    <input asp-for="SourName" class="form-control" />
                    <span asp-validation-for="SourName" class="text-danger"></span>
                </div>
            </th>
            <th>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </th>
            <th>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </th>
        </tr>
        <tr>
            <th>
                <div class="form-group">
                    <label>Role</label>
                    <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                </div>
            </th>
            <th>
                <div class="form-group">
                    <label>State</label>
                    <select asp-for="StateId" class="form-control" asp-items="ViewBag.StateId"></select>
                </div>
            </th>
            <th>
                <div class="form-group">
                    <label>Supervisor</label>
                    <select asp-for="SupervisorId" class="form-control" asp-items="ViewBag.SupervisorId"></select>
                </div>
            </th>
            <th>
                <div class="form-group">
                    <label>Department</label>
                    <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                </div>
            </th>
        </tr>
    </table>
    <div class="form-group">
         <input type="submit" value="Save" class="btn_create" />
    </div>       
</form>
<div>
    <a class="btn" asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
