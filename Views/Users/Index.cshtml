@model IEnumerable<Perfomans.Models.User>

@{
    ViewData["Title"] = "Employees -";
}


<div style="margin-top: 3em;">
        <div class="col-sm-4">
            <a class="btn_create" style="float:right" asp-action="Create">Create New</a>
        </div>
</div>

<table class="table_main">
    <caption>Employees</caption>
            <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SourName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Password)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.state)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supervisor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                Actions
            </th>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SourName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Role.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.state.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supervisor.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    <a class="btn_edit" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                    <a class="btn_danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a> 
                </td>
            </tr>
            }
</table>
