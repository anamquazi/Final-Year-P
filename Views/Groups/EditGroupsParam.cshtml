@model Perfomans.Models.Groups
 <div class="row">
    <div class="col-sm-3">
     </div>
     <div class="col-sm-6">
          <div style="margin-top: 3em" class="ui segment">
                <table class="table_main">
                    <caption>Edit group patameters</caption>
                    <thead>
                        <tr>
                            <th>Parameter</th>
                            <th>Mark</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ParametersGroup parametersGroup in Model.ParametersGroups)
                        {
                            <tr>

                                <td>
                                    @parametersGroup.Parameters.Name
                                </td>
                                <td>
                                    @parametersGroup.Mark
                                </td>
                                <td>
                                    <div class="btn_edit">
                                        @Html.ActionLink("Edit", "Edit", "GroupsParameters", new { ParametertId = parametersGroup.ParameterId, GroupId = parametersGroup.GroupId })
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <div class="btn_create">
                @Html.ActionLink("Done", "DepartmentPage", "Departments", new { id = @ViewBag.DepId })
                <div>
          </div>
     </div>
</div>
